# EditorConfig is awesome: http://EditorConfig.org
# top-most EditorConfig file
root = true
# defaults
[*]
insert_final_newline = true     

# 4 space indentation
[*.{cfg,ini,py,rst}]
indent_style = space
indent_size = 4

# 4-width tabbed indentation
[*.{sh,bat}]
indent_style = tab
indent_size = 4

# and travis does its own thing
[.travis.yml]
indent_style = space
indent_size = 2